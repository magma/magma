{
  "name": "fbc",
  "private": true,
  "version": "0.1.0",
  "description": "Code shared outside of Facebook for fbc",
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.0.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@babel/runtime": "^7.3.4",
    "@fbcnms/util": "^0.1.0",
    "babel-plugin-fbt": "^0.10.4",
    "babel-plugin-fbt-runtime": "^0.9.9",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-relay": "^8.0.0",
    "fbt": "^0.10.6"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.9.0",
    "eslint": "^6.0.1",
    "eslint-config-fb-strict": "^24.3.0",
    "eslint-config-fbcnms": "^0.1.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-eslint-comments": "^3.0.1",
    "eslint-plugin-flowtype": "^4.3.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jest": "^22.7.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-lint": "^1.0.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^2.0.1",
    "eslint-plugin-relay": "^1.5.0",
    "eslint-plugin-sort-imports-es6-autofix": "^0.5.0",
    "jest": "^24.9.0",
    "prettier": "1.18.2",
    "regenerator-runtime": "^0.13.2",
    "rimraf": "^3.0.0"
  },
  "resolutions": {
    "@babel/runtime": "^7.3.4"
  },
  "scripts": {
    "eslint": "./node_modules/.bin/eslint --ignore-path .eslintignore",
    "jest": "echo 'Dont run jest directly, use \"yarn run test\"' && exit 1",
    "test": "NODE_ENV=test jest",
    "flow-typed-install": "flow-typed --flowVersion $(flow version --json | jq -r .semver) install --",
    "extract-drop-fbt-inventory": "babel-node scripts/fb/fbt/extract-and-drop --manifest-output-dir ./fbcnms-projects/inventory/i18n/ --src ./fbcnms-projects/inventory/app/ ./fbcnms-packages/fbcnms-ui/ --app-name symphony-web",
    "fetch-land-fbt-inventory": "babel-node scripts/fb/fbt/fetch-land-translations --manifest-output-dir ./fbcnms-projects/inventory/i18n/ --src ./fbcnms-projects/inventory/app/ ./fbcnms-packages/fbcnms-ui/ --translations-dir ./fbcnms-projects/inventory/i18n/ --app-name symphony-web",
    "generate-promql-grammar": "nearleyc fbcnms-packages/fbcnms-alarms/components/prometheus/PromQLGrammer.ne -o fbcnms-packages/fbcnms-alarms/components/prometheus/__generated__/PromQLGrammar.js"
  },
  "workspaces": {
    "nohoist": [
      "@fbcnms/relay/core-js",
      "@fbcnms/relay/core-js/**",
      "@fbcnms/relay/relay-compiler"
    ],
    "packages": [
      "fbcnms-packages/*",
      "fbcnms-projects/*"
    ]
  }
}
