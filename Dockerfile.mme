# Create running dirs
WORKDIR /var/opt/magma
WORKDIR /usr/local/etc/redis
COPY --from=conv-builder /magma/lte/gateway/configs/redis_for_container.conf redis.conf

WORKDIR /etc/magma
COPY --from=conv-builder /magma/lte/gateway/configs/control_proxy.yml .
